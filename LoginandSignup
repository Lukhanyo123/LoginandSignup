

package loginandsignup;

import java.util.ArrayList;

public class Loginandsignup {
    private static ArrayList<SignUpVerification> users = new ArrayList<>();

    public static void addUser(SignUpVerification user) {
        users.add(user);
    }
public static SignUpVerification findUserByUsername(String username) {
        for (SignUpVerification user : users) {
            if (user.getUsername().equals(username)) {
                return user;
            }
        }
        return null;
    }


    public static void main(String[] args) {

        Login LoginFrame = new Login();
        LoginFrame.setVisible(true);
        LoginFrame.pack();
        LoginFrame.setLocationRelativeTo(null); 
    }
}
